// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String        @id @default(cuid())
  name          String?
  email         String        @unique
  password      String        // hashed password
  role          UserRole      @default(USER)
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  subscriptions Subscription[]
  usages        Usage[]
  transactions  Transaction[]
  apiKeys       ApiKey[]
  vapiAgents    VapiAgent[]
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@index([role])
}

enum UserRole {
  USER
  ADMIN
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Subscription {
  id        String   @id @default(cuid())
  userId    String
  plan      SubscriptionPlan @default(FREE)
  credits   Int      @default(0)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@index([userId])
}

model Usage {
  id         String   @id @default(cuid())
  userId     String
  apiKeyId   String?
  vapiAgentId String? // Reference to VapiAgent
  timestamp  DateTime @default(now())
  apiCalls   Int      @default(0)
  tokensUsed Int      @default(0)
  cost       Decimal  @default(0) @db.Decimal(10, 2)
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  apiKey     ApiKey?  @relation(fields: [apiKeyId], references: [id], onDelete: SetNull)
  vapiAgent  VapiAgent? @relation(fields: [vapiAgentId], references: [id], onDelete: SetNull)
  
  @@index([userId])
  @@index([timestamp])
  @@index([apiKeyId])
  @@index([vapiAgentId])
}

model ApiKey {
  id        String   @id @default(cuid())
  userId    String
  name      String
  key       String   @unique // Hashed API key
  keyPrefix String   // First 8 characters for display (e.g., "sk_live_")
  lastUsed  DateTime?
  isActive  Boolean  @default(true)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  usages    Usage[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([key])
}

model Transaction {
  id        String            @id @default(cuid())
  userId    String
  amount    Decimal           @db.Decimal(10, 2)
  type      TransactionType
  status    TransactionStatus @default(PENDING)
  user      User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime          @default(now())

  @@index([userId])
  @@index([status])
}

enum SubscriptionPlan {
  FREE
  PRO
  ENTERPRISE
}

enum TransactionType {
  PURCHASE
  USAGE
}

enum TransactionStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

model VapiAgent {
  id            String   @id @default(cuid())
  userId        String
  name          String   // User-friendly name for the agent
  apiKey        String   // Encrypted Vapi API key
  agentId       String?  // Vapi agent ID (optional, for reference)
  isActive      Boolean  @default(true)
  lastSyncedAt  DateTime?
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  usages        Usage[]  // Usage records for this agent
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([userId])
  @@index([isActive])
}

