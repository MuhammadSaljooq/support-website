// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String        @id @default(auto()) @map("_id") @db.ObjectId
  name          String?
  email         String        @unique
  password      String        // hashed password
  role          UserRole      @default(USER)
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  subscriptions Subscription[]
  usages        Usage[]
  transactions  Transaction[]
  apiKeys       ApiKey[]
  vapiAgents    VapiAgent[]
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@index([role])
}

enum UserRole {
  USER
  ADMIN
}

model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Subscription {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  plan      SubscriptionPlan @default(FREE)
  credits   Int      @default(0)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@index([userId])
}

model Usage {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  userId     String   @db.ObjectId
  apiKeyId   String?  @db.ObjectId
  vapiAgentId String? @db.ObjectId // Reference to VapiAgent
  timestamp  DateTime @default(now())
  apiCalls   Int      @default(0)
  tokensUsed Int      @default(0)
  cost       Float    @default(0)
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  apiKey     ApiKey?  @relation(fields: [apiKeyId], references: [id], onDelete: SetNull)
  vapiAgent  VapiAgent? @relation(fields: [vapiAgentId], references: [id], onDelete: SetNull)
  
  @@index([userId])
  @@index([timestamp])
  @@index([apiKeyId])
  @@index([vapiAgentId])
}

model ApiKey {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  name      String
  key       String   @unique // Hashed API key
  keyPrefix String   // First 8 characters for display (e.g., "sk_live_")
  lastUsed  DateTime?
  isActive  Boolean  @default(true)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  usages    Usage[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model Transaction {
  id        String            @id @default(auto()) @map("_id") @db.ObjectId
  userId    String            @db.ObjectId
  amount    Float
  type      TransactionType
  status    TransactionStatus @default(PENDING)
  user      User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime          @default(now())

  @@index([userId])
  @@index([status])
}

enum SubscriptionPlan {
  FREE
  PRO
  ENTERPRISE
}

enum TransactionType {
  PURCHASE
  USAGE
}

enum TransactionStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

model VapiAgent {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  userId        String   @db.ObjectId
  name          String   // User-friendly name for the agent
  apiKey        String   // Encrypted Vapi API key
  agentId       String?  // Vapi agent ID (optional, for reference)
  isActive      Boolean  @default(true)
  lastSyncedAt  DateTime?
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  usages        Usage[]  // Usage records for this agent
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([userId])
  @@index([isActive])
}

model LoginLog {
  id            String      @id @default(auto()) @map("_id") @db.ObjectId
  userId        String      @db.ObjectId
  username      String
  loginTime     DateTime    @default(now())
  loginDate     DateTime
  ipAddress     String?
  userAgent     String?
  loginStatus   LoginStatus @default(SUCCESS)
  failureReason String?
  createdAt     DateTime    @default(now())

  @@index([userId])
  @@index([loginDate])
  @@index([loginTime])
  @@index([loginStatus])
}

enum LoginStatus {
  SUCCESS
  FAILED
}

